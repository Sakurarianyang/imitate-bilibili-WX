.header{
  margin-top: 7rpx;
  width: 100%;
  height: 70rpx;
  display: flex;
  justify-content:space-around;
}
.header .logo{
  width: 150rpx;
  height: 70rpx;  
}
.header .search{
  width: 60%;
  height: 70rpx;
  background-color: rgba(0, 0,0,0.1);
  border-radius: 15rpx;
  padding-left:15rpx;
  line-height: 85rpx;
}
.header .search .search_logo{
  width: 40rpx;
  height: 40rpx; 
}
.header .header_img{
  width: 70rpx;
  height: 70rpx; 
}
.swiper{
  padding:10rpx 14rpx 6rpx 14rpx;
  height: 200rpx;
}
.swiper .slide-image{
  width: 100%;
  height: 100%;
  border-radius:14rpx; 
}
/*瀑布流*/
.listflexbox{
  margin-top:20rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  flex-wrap:wrap ;
  padding-left:14rpx;
  padding-right:14rpx;
  background-color: rgba(0, 0,0,0.05);
}
.listflexbox .listbox{
  width: 350rpx;
  margin: 5rpx;
  padding: 1rpx;
  background-color: #ffffff;
  border-radius: 15rpx;
}
.listflexbox .listbox .listimg{
  width: 350rpx;
  height: 225rpx;
  border-radius: 15rpx;
}
.listflexbox .listbox .listtext{
  text-align: center;
  font-size: 28rpx;
  width: 340rpx;
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2; 
}