page{
    width: 100%;
    height: 100%;
}
.container{
    width: 100%;
    height: 100%;
}
.nav {
    height: 80rpx;
    width: 100%;
    box-sizing: border-box;
    overflow: hidden;
    line-height: 80rpx;
    background: #f9f9f9;
    font-size: 16px;
    white-space: nowrap;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 99;
    border-bottom: 0.5rpx solid #ccc;
}
.nav-item {
    margin: 0 20rpx 0 20rpx;
    display: inline-block;
    text-align: center;
    font-size: 28rpx;
    color: #757575;
}
.nav-item.active{
    color: #fb7299;
}
.tab-box{
    padding-top: 80rpx;
    background-color: #f9f9f9;
    height: 100%;
    box-sizing: border-box;
}
.tab-content{
    overflow-y: scroll;
}
/*瀑布流*/
.listflexbox{
  display: flex;
  justify-content: center;
  flex-wrap:wrap ;
  padding-left:14rpx;
  padding-right:14rpx;
}
.listflexbox .listbox{
  width: 350rpx;
  margin: 5rpx;
  padding: 1rpx;
  background-color: #ffffff;
  border-radius: 15rpx;
}
.listflexbox .listbox .listimg{
  width: 350rpx;
  height: 225rpx;
  border-radius: 15rpx;
}
.listflexbox .listbox .listtext{
  text-align: center;
  font-size: 28rpx;
  width: 340rpx;
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2; 
}
.headline{
  margin: 30rpx 20rpx 5rpx 20rpx; 
  font-size: 32rpx;
}